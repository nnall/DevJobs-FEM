---
   <main>
        <div class="container results__container">
            
            {# JS is filling in all of these cards #}

            <div id="btn-wrapper">
                <button class="load__more btn">
                    Load More
                </button> 
            </div>
        </div>

    </main> 

    <!-- MODAL --> 

    <form 
        class = "dialog-container hide" 
        role = "dialog"
        aria-modal = "true"  
        id="dialog-container"
        method="GET">

        <div class = "dialog-overlay"></div> <!-- grey'ed out background-->   

        <div class="filter__container" role="document">
            <div class="filter__container-top">
                <svg class = "location__svg">
                    <use xlink:href="#svg-icon-location"></use>
                 </svg>

                <label>
                    <span class="sr-only">Filter By Location</span>
                    <input
                        id = "location__modal"
                        type="search"
                        name="location"
                        placeholder = "Filter by location..."
                        class="filter__search filter__search-dialog search"
                        >
                </label>

            </div>

            <div class="filter__container-bottom">
                <input 
                    id="fulltime__modal"
                    type="checkbox"
                    name= "fulltime"
                    aria-checked="false" 
                    id="filter__checkbox"  
                    class="filter__checkbox filter__checkbox-dialog"
                    >
                <label for="filter__checkbox" class="filter__checkbox-label">Full Time Only</label>


                <button 
                    id= "searchBtn__modal"
                    class="btn search__btn filter__container-searchBtn"
                    type="submit"
                    >
                    Search
                </button>
            </div>
        </div>
    </form>

